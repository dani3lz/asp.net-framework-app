@model BusinessObject.UserData

@{
     Layout = "~/Views/Shared/_Layout.cshtml";
     ViewBag.Title = "Market";
}

@using (Html.BeginForm())
{
     @Html.AntiForgeryToken()

     <!DOCTYPE html>
     <html lang="en">
     <head>
          <title>Books</title>
          <meta charset="utf-8">
          <meta name="viewport" content="width=device-width, initial-scale=1">
          <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
          <link rel="stylesheet" href="~/Content/css/style.css">

     </head>
     <body>
          <div class="wrapper">
               <div id="header">
                    <div class="logo">BOOKShop</div>
                    <div class="menubar"><a href="/Home/Index">Home</a></div>
                    <div class="menubar" style="color:black !important;"><a href="/Market/Category">Market</a></div>
                    @if (Session["Username"] == null)
                    {
                         <div class="menubar"><a href="/Auth/Login">Login</a></div>
                    }
                    else
                    {
                         <div class="dropdown">
                              <div class="menubar user">@Session["Username"].ToString()</div>
                              <div class="dropdown-content">
                                   <a href="/User/Profile">Profile</a>
                                   <a href="/Auth/Logout">Logout</a>
                              </div>
                         </div>
                    }
               </div>

               <div class="market">

                    @foreach (var ctg in Model.Category)
                    {
                         if (Model.Lenght != 0)
                         {
                              <div class="row books" id="@ctg">
                                   <h2>@ctg</h2>
                                   @for (int i = 0; i < Model.Lenght; i++)
                                   {
                                        <div class="col-3 book">
                                             <img draggable="false" src="~/Content/Books/img/@Model.Img[i]">
                                             <h3 style="margin-top:10px;">@Model.Books[i]</h3>
                                             <h5 style="margin-top:10px;">@Model.Autor[i]</h5>
                                             <p>Pretul: @Model.Price[i] MDL</p>
                                             <form action="/Market/Book" autocomplete="off" method="post"></form>
                                             <button type="submit" name="btn" value="@Model.Books[i]"><span>Acceseaza</span></button>

                                        </div>
                                   }
                              </div>
                         }
                         else
                         {
                              <h1>Pana cand nu sunt carti adaugate in categoria @ctg :(</h1>
                         }
                    }


               </div>
          </div>

          <script src="~/Scripts/jquery-3.5.1.min.js"></script>
          <script src="~/Content/js/app1.js"></script>
          <script src="~/Scripts/bootstrap.min.js"></script>
     </body>
</html>
}
