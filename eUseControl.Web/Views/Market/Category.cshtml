@model BusinessObject.UserData

@{
     Layout = "~/Views/Shared/_Layout.cshtml";
     ViewBag.Title = "Category";
}

@using (Html.BeginForm())
{
     @Html.AntiForgeryToken()

     <!DOCTYPE html>
     <head>
          <title>Books</title>
          <meta charset="utf-8">
          <meta name="viewport" content="width=device-width, initial-scale=1">
          <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
          <link rel="stylesheet" href="~/Content/css/style.css">

     </head>
     <body>
          <div class="wrapper">
               <div id="header">
                    <div class="logo">BOOKShop</div>
                    <div class="menubar"><a href="/Home/Index">Home</a></div>
                    <div class="menubar" style="color:black !important;"><a href="/Market/Category">Market</a></div>
                    @if (Session["Username"] == null)
                    {
                         <div class="menubar"><a href="/Auth/Login">Login</a></div>
                    }
                    else
                    {
                         <div class="dropdown">
                              <div class="menubar user">@Session["Username"].ToString()</div>
                              <div class="dropdown-content">
                                   <a href="/User/Profile">Profile</a>
                                   <a href="/Auth/Logout">Logout</a>
                              </div>
                         </div>
                    }
               </div>


               <div class="marketctg">
                    <div class="row category">
                         @foreach (var ctg in Model.Category)
                         {
                              <form action="/Market/Books" autocomplete="off" method="post"></form>
                              <button class="col-3 ctg" type="submit" name="btn" value="@ctg">
                                   <h2>@ctg</h2>
                              </button>

                         }
                    </div>
               </div>




          </div>

          <script src="~/Scripts/jquery-3.5.1.min.js"></script>
          <script src="~/Content/js/app1.js"></script>
          <script src="~/Scripts/bootstrap.min.js"></script>
     </body>
}

